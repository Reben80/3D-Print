---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

const faculty = [
  {
    name: "Dr. Rebin Muhammad",
    title: "Associate Professor",
    specialty: "Mathematics Education & 3D Printing",
    image: "https://raw.githubusercontent.com/Reben80/3D-Print/main/public/images/gallery/rebin_muhammad.jpg
",
    description: "Ph.D. from Ohio University, specializing in innovative teaching methods including 3D printing in mathematics. Passionate about creating inclusive learning environments and implementing active learning techniques. Interests include Islamic Geometric Art and educational technology."
  },
  {
    name: "Dr. Pallavi Sharma",
    title: "Professor",
    specialty: "Mathematical Visualization",
    image: "https://raw.githubusercontent.com/Reben80/3D-Print/main/public/images/gallery/pallavi_bhale.jpg
",
    description: "Dedicated to integrating 3D printing technology in mathematics education. Focuses on making complex mathematical concepts accessible through hands-on learning experiences."
  },
  {
    name: "Dr. Tom",
    title: "Assistant Professor",
    specialty: "Mathematical Modeling",
    image: "https://raw.githubusercontent.com/Reben80/3D-Print/main/public/images/gallery/pallavi_bhale.png
",
    description: "Focuses on making abstract mathematical concepts tangible through 3D printing and computational modeling."
  },
  {
    name: "Dr. Jojo",
    title: "Research Professor",
    specialty: "Applied Mathematics",
    image: "https://placehold.co/200x200",
    description: "Explores practical applications of 3D printing in mathematical modeling and education."
  }
];
---

<Layout title="Faculty - 3D Printing in Mathematics">
  <main>
    <PageHeader 
      title="Our Faculty" 
      subtitle="Meet our dedicated team of educators and researchers"
    />
    
    <div class="faculty-grid">
      {faculty.map((member) => (
        <div class="faculty-card">
          <img src={member.image} alt={member.name} />
          <div class="faculty-info">
            <h2>{member.name}</h2>
            <h3>{member.title}</h3>
            <h4>{member.specialty}</h4>
            <p>{member.description}</p>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 1000px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .faculty-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    padding: 1rem;
  }
  .faculty-card {
    background: rgba(var(--accent-dark), 0.2);
    border-radius: 8px;
    padding: 1.5rem;
    display: flex;
    gap: 1.5rem;
    transition: transform 0.2s;
  }
  .faculty-card:hover {
    transform: translateY(-5px);
  }
  .faculty-card img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
  }
  .faculty-info h2 {
    color: rgb(var(--accent-light));
    font-size: 1.5rem;
    margin: 0;
  }
  .faculty-info h3 {
    color: white;
    font-size: 1.1rem;
    margin: 0.5rem 0;
  }
  .faculty-info h4 {
    color: rgb(var(--accent-light));
    font-size: 1rem;
    margin: 0.5rem 0;
    font-style: italic;
  }
  .faculty-info p {
    font-size: 0.9rem;
    margin: 0.5rem 0 0 0;
  }
</style>
