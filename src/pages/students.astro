---

<Layout title="Students - 3D Printing in Mathematics">
	<main>
		<PageHeader 
			title="Our Students"
			subtitle="Meet the innovative minds behind our 3D printing projects"
		/>
		
		<div class="students-grid">
			{students.map((student) => (
				<div class="student-card">
					<img src={student.image} alt={student.name} />
					<div class="student-info">
						<h2>{student.name}</h2>
						<h3>{student.year}</h3>
						<p>Project: {student.project}</p>
					</div>
				</div>
			))}
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.students-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		padding: 1rem;
	}
	.student-card {
		background: rgba(var(--accent-dark), 0.2);
		border-radius: 8px;
		padding: 1.5rem;
		text-align: center;
		transition: transform 0.2s;
	}
	.student-card:hover {
		transform: translateY(-5px);
	}
	.student-card img {
		width: 150px;
		height: 150px;
		border-radius: 50%;
		margin-bottom: 1rem;
		object-fit: cover;
	}
	.student-info h2 {
		color: rgb(var(--accent-light));
		font-size: 1.3rem;
		margin: 0;
	}
	.student-info h3 {
		color: white;
		font-size: 1rem;
		margin: 0.5rem 0;
	}
	.student-info p {
		font-size: 0.9rem;
		margin: 0.5rem 0 0 0;
		color: rgb(var(--accent-light));
	}
</style>